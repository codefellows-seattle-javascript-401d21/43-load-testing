{
  "config": {
    "target": "https://backend-401d21-daniel-lab39.herokuapp.com",
    "phases": [
      {
        "duration": 5,
        "arrivalRate": 20
      },
      {
        "duration": 10,
        "arrivalRate": 50
      }
    ],
    "processor": "./load-test-create-user.js"
  },
  "scenarios": [
    {
      "name": "Create Users",
      "flow": [
        {
          "function": "create"
        },
        {

          "post": {
            "url": "/api/v1/signup",
            "json": {
              "username": "{{username}}",
              "email": "{{email}}",
              "pw": "{{password}}"
            },
            "capture": {
              "json": "$.token",
              "as": "token"
            }
          }
        },
        {
          "post": {
            "url": "/api/v1/signin",
            "headers": {
              "Authorization": "Basic {{basicAuth}}"
            }
          }
        }
      ]
    }
  ]
}